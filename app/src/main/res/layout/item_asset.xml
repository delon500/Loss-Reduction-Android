<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant">

    <!-- Asset Image with improved styling -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageAsset"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutlineVariant"
            android:background="?attr/colorSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars"/>

        <!--Asset Name with improved typography -->
        <TextView
            android:id="@+id/textAssetName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Asset Name"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toEndOf="@id/imageAsset"
            app:layout_constraintTop_toTopOf="@id/imageAsset"
            app:layout_constraintEnd_toStartOf="@id/quantityChip"
            app:layout_constraintHorizontal_bias="0"/>

        <!--Category with icon and improved styling-->


            <TextView
                android:id="@+id/textAssetCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Electronics"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="@color/dodger_blue"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Electronics â€¢ IT Equipment"
                app:layout_constraintStart_toStartOf="@id/textAssetName"
                app:layout_constraintTop_toBottomOf="@id/textAssetName"
                app:layout_constraintEnd_toStartOf="@id/quantityChip"/>

        <!-- Status indicator -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatus"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:text="Available"
            android:textColor="@color/white"
            android:visibility="gone"
            app:chipBackgroundColor="@color/dodger_blue"
            app:layout_constraintBottom_toBottomOf="@id/buttonAction"
            app:layout_constraintEnd_toStartOf="@+id/buttonAction"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imageAsset"
            app:layout_constraintTop_toBottomOf="@id/textAssetCategory"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible"/>

        <!--Quantity indicator-->
        <com.google.android.material.chip.Chip
            android:id="@+id/quantityChip"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/white"
            app:chipBackgroundColor="@color/dodger_blue"
            app:chipStrokeWidth="0dp"
            app:textStartPadding="8dp"
            app:textEndPadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageAsset"
            app:layout_constraintBottom_toBottomOf="@id/imageAsset"/>

        <!-- Action button-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAction"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="View Details"
            android:textColor="@color/dodger_blue"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quantityChip"
            app:layout_constraintVertical_bias="1.0"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>